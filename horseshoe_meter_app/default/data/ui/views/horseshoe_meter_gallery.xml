    <row>
        <panel>
            <title>Horseshoe Meter with Trellis Layout</title>
            <viz type="horseshoe_meter_app.horseshoe_meter">
                <search>
                    <query>| inputlookup horseshoe_data.csv
                        | head 100
                        | eval rnd = random() % 10
                        | rangemap field=rnd "Site 1"=0-2 "Site 2"=3-5 "Site 3"=6-8 default="Site 4"
                        | stats avg(value) as count by range
                        | eval count = round(count)</query>
                    <earliest>0</earliest>
                    <latest></latest>
                    <sampleRatio>1</sampleRatio>
                </search>
                <option name="drilldown">none</option>
                <option name="height">233</option>
                <option name="horseshoe_meter_app.horseshoe_meter.backgroundColor">#FFF</option>
                <option name="horseshoe_meter_app.horseshoe_meter.maxValue">10000</option>
                <option name="trellis.enabled">1</option>
                <option name="trellis.scales.shared">1</option>
                <option name="trellis.size">medium</option>
            </viz>
